<% layout('layouts/boilerplate') %>

<main class="flex-grow-1 d-flex align-items-center justify-content-center py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-4 text-center p-5">
          <h1 class="display-4 text-danger mb-3">Oops!</h1>
          <h4 class="fw-semibold mb-4"><%= err.status || 500 %> - <%= err.message || "Something went wrong" %></h4>
          <a href="/" class="btn btn-outline-dark rounded-pill px-4 py-2">
            <i class="bi bi-house-door-fill me-2"></i>Back to Home
          </a>
        </div>
      </div>
    </div>
  </div>
</main>